{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "demo/**",
    "lib/**",
    "src/**/*.test.tsx"
  ]
}
